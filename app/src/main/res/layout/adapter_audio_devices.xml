<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/labelTV"
            style="@style/TextAppearance.BodyMedium.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/dimen_15dp"
            android:paddingVertical="@dimen/dimen_30dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/checkIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/app_name"
            android:paddingHorizontal="@dimen/dimen_15dp"
            android:paddingVertical="@dimen/dimen_30dp"
            android:src="@drawable/ic_check_mark"
            android:visibility="gone" />

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0_5dp"
            android:layout_below="@id/labelTV"
            android:layout_marginHorizontal="@dimen/dimen_15dp"
            android:background="@color/white" />

    </RelativeLayout>

</layout>