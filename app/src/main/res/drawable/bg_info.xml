<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:top="@dimen/dimen_16dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <size
                android:width="@dimen/dimen_343dp"
                android:height="@dimen/dimen_130dp" />
            <corners android:radius="@dimen/dimen_8dp" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:gravity="start|top"
        android:left="@dimen/dimen_94dp"
        android:top="@dimen/dimen_20dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
                <size
                    android:width="@dimen/dimen_16dp"
                    android:height="@dimen/dimen_16dp" />
            </shape>
        </rotate>
    </item>
</layer-list>